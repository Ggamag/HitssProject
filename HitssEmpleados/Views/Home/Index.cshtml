

<div class="card">
    <div class="card-header bg-info"><h1>Busqueda de empleados</h1></div>
    <div class="card-body table-responsive">
        <div class="col-md-12">
            <div class="col-md-1">
                <label>Id</label>
                <input type="text" class="form-control" id="TxtIdEmp" />
            </div>
            <div class="col-md-2">
                <label>Nombre</label>
                <input type="text" class="form-control" id="TxtName" />
            </div>
            <div class="col-md-4">
                <div class="col-md-6">
                    <label>fecha inicio</label>
                    <input data-provide="datepicker" class="form-control" id="TxtFI">
                </div>
                <div class="col-md-6">
                    <label>Fecha final</label>
                    <input data-provide="datepicker" class="form-control" id="TxtFF">
                </div>
            </div>
            <div class="col-md-3">
                <label>Id Empleado</label>
                <select id="CbxSucursal" class="form-control">
                    <option value="0">-Seleccione Sucursal-</option>
                </select>
            </div>
            <div class="col-md-2">
                <input type="button" id="BtnFiltrar" class="btn btn-success" value="Buscar empleado" style="margin-top:25px;" />
            </div>
        </div>
        <div class="col-md-12" style="margin-top:15px;">
            <table id="DTEmpleados" class=" table table-hover table-responsive">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Dirección</th>
                        <th>Edad</th>
                        <th>Sexo</th>
                        <th>Telefono</th>
                        <th>Fecha</th>
                        <th>Salario</th>
                        <th>Sucursal</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.4.1.js"></script>
